doctype html
html(lang=en)
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    title Linky
    meta(name='description' content='save yerr links')
    link(rel='stylesheet' href='dist/main.css')

  body
    header
      nav.main-nav
        .items
          .section
            a(href='#')
              h1.title Linky
          .section.settings-logout-save
            a.icon(href='#add') +
            a.icon(href='#settings') ‚öô
            a(href='#logout') Logout

    nav.list-options
      .option-section
        a.icon(href='#search') üîç
        input.search
      .option-section
        a(href='#list') List
        a.inactive(href='#archive') Archive
    .link-container
      each l in [{"name": "Google.com", "description": "an internet company", "source": "https://www.google.com"}, {"name": "Rustlings", "description": "Small exercises to get you used to reading and writing Rust code.", "source" : "https://github.com/carols10cents/rustlings"}, {"name": "Google.com", "description": "an internet company", "source": "https://www.google.com"}, {"name": "Google.com", "description": "an internet company", "source": "https://www.google.com"}, {"name": "Google.com", "description": "an internet company", "source": "https://www.google.com"},{"name": "Google.com", "description": "an internet company", "source": "https://www.google.com"},{"name": "Google.com", "description": "an internet company", "source": "https://www.google.com"},{"name": "Google.com", "description": "an internet company", "source": "https://www.google.com"},]
        li
          h3.link-title
            a(href=l.source) #{l.name}
          p.description #{l.description}
          a.source(href=l.source) #{l.source}

    #add.modal-container.add.hidden
      .modal-inner
        .modal
          nav
            h1 Add Link
            h1
              a.close(href="#close") ‚úï
          input(type=textbox)
          button.btn.blue(type=submit) Add

    #settings.modal-container.settings.hidden
          .modal-inner
            .modal
              nav
                h1 Settings
                h1
                  a.close(href="#close") ‚úï
              p Setting 1
              p Setting 2

    #help.modal-container.help.hidden
          .modal-inner
            .modal
              nav
                h1 Key Binds
                h1
                  a.close(href="#close") ‚úï
              ul
                li j - down
                li k - up
                li l - switch right list (wraps)
                li h - switch left list (wraps)
                li a - archive current item (or unarchive)
                li # - delete current item
                li / - search
                li ? - toggle help menu
                li esc - close current menu

  script(src='dist/index.js')
  script(src='dist/nav.js')
